  body
    .container-fluid
      .row
        .col-md-3
          nav
            .navbar-header
              button.navbar-toggle.collapsed(
                type="button"
                data-toggle="collapse"
                data-target="#navbar"
                aria-expanded="false"
                aria-controls="navbar"
              )
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
              a.navbar-brand(href="") #{ public._data.index.title }
              #navbar.collapse.navbar-collapse
                ul.nav.navbar-nav
                  li: a(href="getting-started.html") Getting Started
        .col-md-9
          block content

    script(src="dist/js/global.bundle.js")
